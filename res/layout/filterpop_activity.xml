<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0" 
    >
    
     <!--
    **
    ***
              头部信息
    ***          
    **
    -->
     <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="过滤泡泡"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="#1ad9d7"
            android:textSize="20sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/miao_bian1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topLayout"
        android:background="#afb3b2"
        android:text="" />
    
    <!--
    **
    ***
              个人泡泡
    ***          
    **
    -->
        <RelativeLayout android:id="@+id/personPopLayout"
             android:layout_below="@+id/miao_bian1"
        android:layout_width="fill_parent"
         android:layout_height="40dip"
        android:background="#ffffff" 
            >

            <TextView
                android:id="@+id/personPop_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="个人泡泡"
                android:textSize="23sp" />

            <CheckBox
                android:id="@+id/personPop_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip" />

        </RelativeLayout>
        <TextView
        android:id="@+id/miao_bian2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/personPopLayout"
        android:background="#afb3b2"
        android:text="" />
    <!--
    **
    ***
              公共信息泡泡
    ***          
    **
    -->
        <RelativeLayout android:id="@+id/publicInformationPopLayout"
             android:layout_below="@+id/miao_bian2"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#ffffff" 
            >

            <TextView
                android:id="@+id/publicInformationPop_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="公共信息泡泡"
                 android:textSize="23sp" />

            <CheckBox
                android:id="@+id/publicInformationPop_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip" />

        </RelativeLayout>
        <TextView
        android:id="@+id/miao_bian3"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/publicInformationPopLayout"
        android:background="#afb3b2"
        android:text="" />
    <!--
    **
    ***
            景点泡泡
    ***          
    **
    -->
        <RelativeLayout android:id="@+id/touristPopLayout"
             android:layout_below="@+id/miao_bian3"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#ffffff" 
            >

            <TextView
                android:id="@+id/touristPop_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="景点泡泡"
                android:textSize="23sp" />

            <CheckBox
                android:id="@+id/touristPop_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip" />

        </RelativeLayout>
        <TextView
        android:id="@+id/miao_bian4"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/touristPopLayout"
        android:background="#afb3b2"
        android:text="" />
         <!--
    **
    ***
           商业泡泡
    ***          
    **
    -->
        <RelativeLayout android:id="@+id/businessPopLayout"
             android:layout_below="@+id/miao_bian4"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#ffffff" 
            >

            <TextView
                android:id="@+id/businessPop_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="商业泡泡"
                 android:textSize="23sp"/>

            <CheckBox
                android:id="@+id/businessPop_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip" />

        </RelativeLayout>
        <TextView
        android:id="@+id/miao_bian5"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/businessPopLayout"
        android:background="#afb3b2"
        android:text="" />
       
    <!--
    **
    ***
       过滤提示
    ***          
    **
    -->
   <TextView
             android:id="@+id/guolvtishi_textView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/businessPopLayout"
             android:layout_marginTop="36dip"
             android:text="·点击方框勾选需要的泡泡种类，可多选"
             android:textColor="#0e91f7"
             android:textSize="17sp" />
    <!--
    **
    ***
      搜索
    ***          
    **
    --> 
     
        <RelativeLayout android:id="@+id/searchPopLayout"
             
             android:layout_below="@+id/guolvtishi_textView"
              android:layout_marginTop="15dip"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="@drawable/border" 
            >

            <ImageView
                android:id="@+id/search_imageView"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/magnifier" />

            <EditText
                android:id="@+id/search_myEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/search_imageView"
                android:ems="20"
                android:hint="输入搜索关键字"
                 android:textSize="23sp"
               />
   
        </RelativeLayout>
       
      <!--
    **
    ***
      搜索提示
    ***          
    **
    -->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/guolvtishi_textView"
            android:layout_below="@+id/searchPopLayout"
            android:layout_marginTop="20dp"
            android:textColor="#f01035"
            android:text="·搜素你感兴趣的内容" 
             android:textSize="17sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
             android:textColor="#f01035"
            android:text=" 如：输入 util，找到相关泡泡"
             android:textSize="17sp" />
        
     <!--
    **
    ***
      确定按钮
    ***          
    **
    -->
     <TextView
        android:id="@+id/miao_bian8"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/submitLayout"
        android:background="#afb3b2"
        android:text="" />
        
         <RelativeLayout android:id="@+id/submitLayout"
         android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
         android:background="#ffffff" 
            >

             <Button
                 android:id="@+id/submit_button"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                  android:background="#ffffff" 
                  android:textSize="23sp"
                 android:text="确认" />
             
            </RelativeLayout>

         

</RelativeLayout>
